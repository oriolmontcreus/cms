{
	"name": "excaliburcms",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"bin": {
		"excalibur": "./cli.js"
	},
	"scripts": {
		"dev": "bash ./dev.sh",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"create-user": "cd backend && npm run create-user",
		"create-page": "tsx backend/scripts/create-page.ts",
		"create-component": "tsx backend/scripts/create-component.ts",
		"delete-component": "tsx backend/scripts/delete-component.ts",
		"install-cli": "npm link",
		"uninstall-cli": "npm unlink -g excaliburcms"
	},
	"dependencies": {
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.26.1",
		"@tailwindcss/postcss": "^4.1.9",
		"@tailwindcss/vite": "^4.1.9",
		"axios": "^1.10.0",
		"bcrypt": "^5.1.1",
		"enquirer": "^2.4.1",
		"jose": "^6.0.11",
		"mode-watcher": "^1.0.8",
		"mongodb": "^6.3.0",
		"mongoose": "^8.15.2",
		"redis": "^5.5.6",
		"svelte-sonner": "^1.0.5",
		"tailwindcss": "^4.1.9"
	},
	"devDependencies": {
		"@castlenine/svelte-qrcode": "^2.3.0",
		"@dnd-kit-svelte/core": "^0.0.8",
		"@dnd-kit-svelte/modifiers": "^0.0.8",
		"@dnd-kit-svelte/sortable": "^0.0.8",
		"@dnd-kit-svelte/utilities": "^0.0.8",
		"@internationalized/date": "^3.8.2",
		"@lucide/svelte": "^0.515.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tabler/icons-svelte": "^3.34.0",
		"@tailwindcss/typography": "^0.5.10",
		"@tanstack/table-core": "^8.21.3",
		"@types/axios": "^0.14.0",
		"@types/bcrypt": "^5.0.2",
		"@types/d3-scale": "^4.0.9",
		"@types/d3-shape": "^3.1.7",
		"@types/node": "^20.19.1",
		"bits-ui": "^2.8.6",
		"clsx": "^2.1.1",
		"d3-scale": "^4.0.2",
		"d3-shape": "^3.2.0",
		"layerchart": "^2.0.0-next.18",
		"postcss": "^8.5.5",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"ts-node": "^10.9.2",
		"tsx": "^4.7.1",
		"tw-animate-css": "^1.3.4",
